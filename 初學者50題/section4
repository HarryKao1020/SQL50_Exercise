-- å­¸ç¿’1:SELECTå–®ç¨
SELECT "hello" AS hello_world;

-- å­¸ç¿’2:æ•¸å€¼é‹ç®—
SELECT  heightFeet,
        heightInches,
        heightFeet * 30.48 + heightInches *2.54 AS heightCentimeters
    FROM players
LIMIT 5;

-- æµ®é»æ•¸
SELECT 1.0/2 AS a_real;
SELECT 1/2 AS a_real; -- æœƒæ˜¯æ•´æ•¸

-- å­¸ç¿’3:æ–‡å­—é‹ç®—
SELECT firstName , 
       lastName , 
       firstName ||' ' || lastName AS FullName 
    FROM players
LIMIT 10;

